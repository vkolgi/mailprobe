<!DOCTYPE html>
<div class="row">
<div class="col-lg-9">
<div class="bs-docs-section">

            <div class="bs-component">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col"><strong>From</strong></th>
                    <th scope="col">Subject</th>
                    <th scope="col">To</th>
                    <th scope="col">Date</th>
                  </tr>
                </thead>
                <tbody>

                {{#each docs}}
                  <tr onclick="window.location='/details/{{this._id}}'">
                    <td>{{this.from.value.[0].address}}</td>
                    <td>{{this.subject}}</td>
                    <td>{{this.to.value.[0].address}}</td>
                    <td>{{this.date}}</td>
                  </tr>
                {{/each}}

                </tbody>
              </table>
          </div>
      </div>
  </div>
  {{#if email_id}}
  <div class="col-lg-3">
    <div class="bs-docs-section mt-3">
      <div class="card border-secondary mb-3">
          <h4 class="card-header">Subject: {{details.subject}}</h4>
            <div class="card-body">
                  <p class="lead">{{{details.textAsHtml}}}</p>
            </div>
      </div>
    </div>
  </div>
  {{/if}}
</div>
