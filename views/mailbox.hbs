<!DOCTYPE html>
<div class="row">
<div class="col-lg-9">
<div class="bs-docs-section">

            <div class="bs-component">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th><h5>From</h5></th>
                    <th><h5>Subject</h5></th>
                    <th><h5>To</h5></th>
                    <th><h5>Date</h5></th>
                  </tr>
                </thead>
                <tbody>

                {{#each docs}}
                  <tr onclick="window.location='/details/{{this._id}}'">
                    <td>{{this.from.value.[0].address}}</td>
                    <td class="text-info">{{this.subject}}</td>
                    <td>{{this.to.value.[0].address}}</td>
                    <td>{{this.date}}</td>
                  </tr>
                {{/each}}

                </tbody>
              </table>
          </div>
      </div>
  </div>
  {{#if email_id}}
  <div class="col-lg-3">
    <div class="bs-docs-section mt-3">
      <div class="card border-secondary mb-3">
          <h4 class="card-header">Subject: {{details.subject}}</h4>
            <div class="card-body">
                  {{#if details.html}}
                    {{{details.html}}}
                  {{else}}
                    {{details.text}}
                  {{/if}}
		  <footer class="blockquote-footer">Date: <cite title="Source Title">{{details.date}}</cite></footer>
            </div>
      </div>
    </div>
  </div>
  {{/if}}
</div>
